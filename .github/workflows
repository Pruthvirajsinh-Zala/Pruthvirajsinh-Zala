name: Update TryHackMe Badge

on:
  schedule:
    - cron: '0 0 * * *' # Runs every day at midnight
  workflow_dispatch: # Allows manual triggering

jobs:
  update-badge:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout repository
      uses: actions/checkout@v2

    - name: Fetch TryHackMe Badge
      uses: geeekgod/tryhackme-badge-action@v1.0
      with:
        image_path: './assets/badge.png'
        username: 'PruthvirajsinhZala'
        user_id: 'PruthvirajsinhZala'
        committer_username: 'Pruthvirajsinh-Zala'
        committer_email: 'prithvirajsinhzala99@gmail.com'
        commit_message: 'Updated THM profile badge'
        GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
